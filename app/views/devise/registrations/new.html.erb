<div class="ui container text">
  <div class="ui segment">
    <h2>Entertainer Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'ui form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: 'Password', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'ui button inverted purple' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
