<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: "display:#{devise_error_messages!.blank? ? 'none' : 'block'}", class: 'ui email form' }) do |f| %>
  <% unless devise_error_messages!.blank? %>
    <div class="ui negative message">
      <i class="close icon" onClick="document.querySelector('.negative.message').remove()"></i>
      <p><%= devise_error_messages! %></p>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: 'Password', autocomplete: 'off' %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: 'off' %>
  </div>
  <div class="actions">
    <%= f.submit 'Sign up', class: 'ui button inverted purple' %>
    <%= button_tag 'Cancel', class: 'ui black inverted button cancel', type: 'button' %>
  </div>
<% end %>
