<%= form_for(request, html: { class: "text-center col-md-offset-3 col-md-6" }) do |f| %>
  <% if request.errors.any? %>
    <div class="alert alert-danger">
      <h2>Oh Snap! There was a problem sending your request...</h2>
      <ul>
      <% request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.text_field :artist, class: 'form-control', placeholder: 'Artist' %>
  </div>

  <div class="field">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="field">
    <%= f.text_area :comments, class: 'form-control', placeholder: 'Comment' %>
  </div>

  <a id="add-comment" href="#">+ Add Comment</a>

  <div class="actions">
    <%= button_tag(type: 'submit', class: 'btn btn-lg btn-info') do %>
      <i class="fa fa-paper-plane-o"></i> &nbsp;SEND
    <% end %>
  </div>
<% end %>
